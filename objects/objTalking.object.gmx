if ( (( time mod 2) == 0 || keyboard_check(vk_anykey) ) &amp;&amp; !wait) {

    if (sprite_index != sprTalkHappy) {
    
        if (image_index == 2) image_index = 3;
        else image_index = 2;
    }
    
    if (count == CONTROLS) {
        if (tc &lt; 6) {
            if ((time mod (room_speed / 2)) == 0 ) {
                frame = min (5, frame+1);
                tc++;
            }
        } else {
            wait = true;
        }
    } else {
        if (count == 10) {
             sprite_index = sprTalkHappy;
             image_index = 2;
            image_speed = 0;
        }
        if (tc &lt;= string_length(textes[count])) {
            current += string_char_at(textes[count], tc);
            tc ++;
        } else {
            wait = true;
        }
    } 
    
}

if (wait &amp;&amp; !(sprite_index == sprTalkHappy)) image_index = 0;

if (opc &lt; 1 &amp;&amp; start) {
